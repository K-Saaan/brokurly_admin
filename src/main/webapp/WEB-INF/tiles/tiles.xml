<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="layout-basic" template="/WEB-INF/views/common/layout-basic.jsp">
		<put-attribute name="include" value="/WEB-INF/views/common/include.jsp" />
		<put-attribute name="header" value="/WEB-INF/views/common/header.jsp"/>
		<put-attribute name="body" value=""/>
		<put-attribute name="side" value="/WEB-INF/views/common/side.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp"/>
	</definition>
	<definition name="empty" template="/WEB-INF/views/common/empty.jsp">
		<put-attribute name="include" value="/WEB-INF/views/common/include.jsp" />
		<put-attribute name="body" value=""/>
	</definition>

	<definition name="login" extends="empty">
		<put-attribute name="body" value="/WEB-INF/views/login.jsp"/>
	</definition>
	<definition name="*" extends="layout-basic">
		<put-attribute name="body" value="/WEB-INF/views/{1}.jsp"/>
	</definition>
	<definition name="*/*" extends="layout-basic">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
	</definition>
</tiles-definitions>
